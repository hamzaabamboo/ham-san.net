{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "src",
    "jsxImportSource": "react",
    "paths": {
      "~/*": ["./*"],
      "styled-system/*": ["../styled-system/*"],
      "i18n/*": ["../../../libs/i18n/*"],
      "utils/*": ["../../../libs/utils/*"],
      "outline": ["../../../libs/outline/index.ts"],
      "outline/*": ["../../../libs/outline/*"]
    },
    "verbatimModuleSyntax": false,
    "disableSizeLimit": true
  },
  "include": ["src", "styled-system", "./panda.config.ts"],
  "exclude": [
    "src/components/ui/styled/**/*",
    "src/components/ui/qr-code.tsx",
    "src/components/ui/radio-button-group.tsx",
    "src/components/ui/signature-pad.tsx",
    "src/components/ui/tree-view.tsx"
  ]
}
